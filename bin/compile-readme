function render$1(config) {
	const badgeNode = node('image', {
		alt: _upperFirst(config.title),
		url: `https://img.shields.io/badge/status-${config.text}-${config.color}.svg?style=${config.style}`
	})

	if (config.link) {
		return node('link', {
			title: _upperFirst(config.title),
			url: config.link
		}, [badgeNode])
	}

	return badgeNode
}

